{
	"compilerOptions": {
		"target": "ESNext",
		"module": "esnext",
		"strict": true,
		"jsx": "preserve",
		"importHelpers": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"sourceMap": true,
		"lib": ["esnext", "dom", "dom.iterable"]
	},
	"include": ["./src"]
}
