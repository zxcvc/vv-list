{
    "compilerOptions": {
        "target": "ES2017",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "sourceMap": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"]
    },
    "include": ["./src"]
}
